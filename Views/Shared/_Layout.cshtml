<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyAssessment.WebMVC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyAssessment.WebMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

</head>
<body>
    
    <header><header class="top-navbar">
    <div class="nav-left">
        <span class="menu-icon">&#9776;</span>

        <a asp-controller="Home" asp-action="Index" class="logo-text">
            FlowerShop
        </a>

        <div class="delivery-box">
            <img src="https://flagcdn.com/w20/in.png" />
            <span>
                Delivery to<br />
                <b>400084</b>
            </span>
        </div>
    </div>

    <div class="nav-center">
        <form asp-controller="Product" asp-action="Search" method="get">
            <input type="text" name="q" placeholder="Search for flowers" />
            <button type="submit">
                <i class="fa fa-search"></i>
            </button>
        </form>
    </div>

    <div class="nav-right">
        <span>₹</span>

        <a asp-controller="Wishlist" asp-action="Index">
            <i class="fa fa-heart"></i>
        </a>

        <a asp-controller="ShoppingCart" asp-action="Index">
            <i class="fa fa-shopping-cart"></i>
        </a>

        <a asp-controller="Home" asp-action="Profile">
            <i class="fa fa-user"></i>
        </a>
    </div>
</header>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MyAssessment.WebMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
