@model List<MyAssessment.WebMVC.Models.HomeProduct>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Products";
}

<div class="container my-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@product.ImgUrl" class="card-img-top" alt="@product.Name"
                         style="height: 300px; object-fit: cover;">

                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">@product.Des</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-success mb-0">
                                ₹@product.UnitPrice.ToString("N2")
                            </span>
                            <span class="text-warning">
                                ❤️ @product.Likes
                            </span>
                        </div>
                    </div>

                    <div class="card-footer bg-white border-0">
                        <a asp-controller="ShoppingCart"
                           asp-action="AddToCart"
                           asp-route-id="@product.Id"
                           class="btn btn-dark w-100">
                            Add to Cart
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No products found in this category.
        </div>
    }
</div>
